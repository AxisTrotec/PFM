extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='month') Month:
      input#month.form-control(type='datetime-local', placeholder='Date' name='month' required='true')
    div.form-group
      label(for='spent') Spent:
      input#spent.form-control(type='text', placeholder='Input spent' name='spent' required='true' )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg